@{
    ViewData["Title"] = "Home Page";
}

<div class="home text columnized">
    <h2 class="">Welcome</h2>
    <h4>Here are the flavours and food items in your recipe database.</h4>
</div>
@{
    Layout = "_Layout";
}
@using Patisserie.Models;


@if (User.Identity.IsAuthenticated)
{
    <section class="home-content">
        
        <div class="home-content-flavours">

                    <button class="btn add">@Html.ActionLink("Add a new flavour", "Create", "Flavours")</button>

            <ul><h2>Flavours</h2>
                @foreach(Flavour flavour in ViewBag.Flavours)
                {
                    <li>@Html.ActionLink($"{flavour.Name}", "Details", "Flavours", new { id = flavour.FlavourId })</li>
                }
            </ul>

        </div>

        <div class="home-content-treats">

                    <button class="btn add">@Html.ActionLink("Add a new treat", "Create", "Treats")</button>

            <ul><h2>Food Items</h2>
                @foreach(Treat treat in ViewBag.Treats)
                {
                    <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</li>
                }
                
            </ul>

        </div>

    </section>
    
    <section class="home-content-innerfooter">
       
       
    </section>
}
else
{
    <div class="columnized" style="display: flex; margin-left: 5%;">
        <h2>Please log-in or register to continue.</h2>
    </div>

    <div class="spaceyboi-badNamingConvention" style="height: 3vh;"></div>

    <button class="btn">@Html.ActionLink("Register", "Register", "Account")</button>
    <button class="btn">@Html.ActionLink("Log in", "Login", "Account")</button>
}
