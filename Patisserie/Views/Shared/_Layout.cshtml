<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patiesserie Database</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SweetAndSavoury.Solution.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {                                
                            <li class="nav-item">
                                <section class="log-off-section">
                                    
                                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Account</a>

                                    <div class="logged columnized">

                                        <p>Log-in: @User.Identity.Name</p>

                                    </div>

                                    @using (Html.BeginForm("LogOff", "Account"))
                                    {
                                        <input type="submit" class="btn btn-default" value="Log out" />
                                    }
                                    
                                </section>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Patisserie Database</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Account</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

        
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="container columnized">

                <main role="main centered" class="pb-3">
                    @RenderBody()
                </main>

            </div>

        }
        else
        {
            <div class=" pb-3 main-loggedin">

                @RenderBody()

            </div>
            
        }

        @if (!User.Identity.IsAuthenticated)
        {
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2022 - Marcus Lorenzo
                    </div>
                </footer>

        }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>