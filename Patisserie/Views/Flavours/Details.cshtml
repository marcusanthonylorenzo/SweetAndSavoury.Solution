
@{
  Layout = "_Layout";
}

@model Patisserie.Models.Flavour

<h2 class="text">Flavor Details</h2>

<div class="details">

  <h3>@Html.DisplayNameFor(model => model.Name): <span id="details-name">
      @Html.DisplayFor(model => model.Name)</span></h3> 
  



@if(@Model.JoinEntities.Count == 0)
{
     <h2>There are no treats incorporating this particular flavour.</h2>
}
else
{
    <h4>Treats currently fitting this flavour profile:</h4>
    <ul>

    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{join.Treat.Name}", "Details", "Treats", new { id = join.Treat.TreatId })</li>
    }
    
    </ul> 
}


</div>
<div class="spaceyboi-badNamingConvention" style="height: 3vh;"></div>

 <button class="btn acc">@Html.ActionLink("Edit Flavour", "Edit", new { id = Model.FlavourId })</button>
 <button class="btn acc">@Html.ActionLink("Delete Flavour", "Delete", new { id = Model.FlavourId })</button>
 <button class="btn acc">@Html.ActionLink("Back to Flavor List", "Index")</button>